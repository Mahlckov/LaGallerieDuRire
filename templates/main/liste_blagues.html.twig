{% extends 'base.html.twig' %}


{% block body %}
    <h1>Liste de blagues</h1>


    <table class="table table-hover table-responsive table-striped text-center">
        <thead>
        <tr>
            <th>Titre de la blague</th>
            <th>Description</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for group in groups %}
            <tr>
                <td>{{ group.name }}</td>
                <td>
                    {% for participant in group.participants %}
                        {{ participant.nom }}
                        {% if not loop.last %}, {% endif %}
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('/blague_editer', {'id': blague.id}) }}">Modifier</a> -
                    <a href="{{ path('blague_supprimer', {'id': blague.id}) }}">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune blague trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('nouvelle_blague') }}">
        <button class="btn btn-lg btn-success">Créer une nouvelle blague </button>
    </a>
{% endblock %}

